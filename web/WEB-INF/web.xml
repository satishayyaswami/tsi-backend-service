<?xml version="1.0" ?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
<Configure class="org.eclipse.jetty.webapp.WebAppContext">
  <Set name="maxFormContentSize">2000000</Set>
</Configure>
<filter>
	<filter-name>lpserver</filter-name>
	<filter-class>com.dvarasolutions.lpserver.core.Intercept</filter-class>
</filter>
	
<filter-mapping>
	<filter-name>lpserver</filter-name>
	<url-pattern>/lps/*</url-pattern>
</filter-mapping>

</web-app>
